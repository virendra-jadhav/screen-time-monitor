{
  "name": "screen-time-monitor",
  "version": "1.1.0",
  "description": "Screen Time Monitor with break reminders",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build:electron": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "build-all": "npm run build-win  && npm run  build-linux",
    "build:web": "mkdirp web && copyfiles home.html home.css home.js assets/icons/* web/ && copyfiles styles.css web/",
    "build": "npm run build:web",
    "build-linux-wsl": "wsl electron-builder --linux"
  },
  "keywords": [
    "screen-time",
    "productivity",
    "health",
    "break-reminder"
  ],
  "author": "Virendra Jadhav",
  "license": "MIT",
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "electron": "^25.0.0",
    "electron-builder": "^24.0.0",
    "mkdirp": "^3.0.1"
  },
  "build": {
    "appId": "com.screentimemonitor.screentimemonitor",
    "productName": "Screen Time Monitor",
    "artifactName": "ScreenTimeMonitor-${os}-${arch}.${ext}",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "break-alert.html",
      "styles.css",
      "renderer.js",
      "break-renderer.js",
      "assets/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icons/"
    },
    "extraMetadata": {
      "openAtLogin": true
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Screen Time Monitor"
    }
  }
}
